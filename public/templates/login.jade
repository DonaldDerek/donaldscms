extends layouts/master
include ./layouts/mixins

block content
	.container
		.row
			.col-md-4.col-md-offset-4
				h3 Login Master.
				form.form(method="post")
					mixin bsInput("username","text","Enter username")
					mixin bsInput("password","password","Enter password")
					input(type="hidden", name="_csrf", value=_csrf)
					button.btn.btn-default(type="submit") Authenticate